@inject UserManager<ApplicationUserModel> _userManager;
@inject SignInManager<ApplicationUserModel> _signinManager;
@inject ITrainerRepository _trainer;
@inject AppDbContext _context;
@{
    ViewBag.Title = "Admin | Dashboard";
    ViewBag.DashboardActive = "active";

    var users = _userManager.Users.ToList();
    var activeUsers = new List<ApplicationUserModel>();
    var inActiveUsers = new List<ApplicationUserModel>();

    var trainers = _trainer.GetAllTrainers().ToList();
    var activeTrainers = new List<TrainerModel>();
    var inActiveTrainers = new List<TrainerModel>();

    if (users != null)
    {
        activeUsers = users.FindAll(x => x.AvailabilityStatus == AvailabilityStatusEnum.Active);
        inActiveUsers = users.FindAll(x => x.AvailabilityStatus == AvailabilityStatusEnum.InActive);
    }

    if (trainers != null)
    {
        activeTrainers = trainers.FindAll(x => x.AvailabilityStatus == AvailabilityStatusEnum.Active);
        inActiveTrainers = trainers.FindAll(x => x.AvailabilityStatus == AvailabilityStatusEnum.InActive);
    }
    var equipments = _context.Equipment.ToList();
}

<style>
    #date, #clock {
        font-size: 22px;
    }
</style>

<!-- / Navbar -->
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-lg-8 mb-4 order-0">
                <div class="card">
                    <div class="d-flex align-items-end row">
                        <div class="col-sm-7">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Welcome to Fitness Management Panel ! 🎉</h5>
                                <p class="mb-4">
                                    Click the below Button to View Your Profile. Check your profile.
                                </p>

                                <a asp-controller="Account" asp-action="Settings" class="btn btn-sm btn-outline-primary">View Profile</a>
                            </div>
                        </div>
                        <div class="col-sm-5 text-center text-sm-left">
                            <div class="card-body pb-0 px-0 px-md-4">
                                <img src="../assets/img/illustrations/man-with-laptop-light.png"
                                     height="140"
                                     alt="View Badge User"
                                     data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                     data-app-light-img="illustrations/man-with-laptop-light.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 order-1">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <img src="../assets/img/icons/unicons/chart-success.png"
                                             alt="chart success"
                                             class="rounded" />
                                    </div>
                                </div>
                                <span class="fw-semibold d-block mb-1">Time</span>
                                <h3 class="card-title mb-2" id="clock"></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <img src="../assets/img/icons/unicons/wallet-info.png"
                                             alt="Credit Card"
                                             class="rounded" />
                                    </div>

                                </div>
                                <span class="fw-semibold d-block mb-1">Date</span>
                                <h3 class="card-title text-nowrap mb-1" id="date"></h3>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Total Revenue -->
        </div>

        <div class="row">
            <!-- Order Statistics -->
            @if (_signinManager.IsSignedIn(User) && User.IsInRole("Administration"))
            {
                <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex align-items-center justify-content-between pb-0">
                            <div class="card-title mb-0">
                                <h5 class="m-0 me-2">Member Statistics</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex flex-column align-items-left gap-1 mt-4">
                                    <h2 class="mb-2">@users.Count()</h2>
                                    <span>Total Members</span>
                                </div>
                            </div>
                            <ul class="p-0 m-0">
                                <li class="d-flex mb-4 pb-1">

                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <h6 class="mb-0">Active</h6>
                                            <small class="text-muted">Currently Active Member</small>
                                        </div>
                                        <div class="user-progress">
                                            <small class="fw-semibold">@activeUsers.Count() Members</small>
                                        </div>
                                    </div>
                                </li>
                                <li class="d-flex mb-4 pb-1">

                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <h6 class="mb-0">In Active</h6>
                                            <small class="text-muted">Members that are not Active Currently</small>
                                        </div>
                                        <div class="user-progress">
                                            <small class="fw-semibold">@inActiveUsers.Count() Members</small>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                            <a asp-controller="Members" asp-action="AvailableMembers" type="submit" class="btn btn-danger deactivate-account">Go to Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex align-items-center justify-content-between pb-0">
                            <div class="card-title mb-0">
                                <h5 class="m-0 me-2">Trainer Statistics</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex flex-column align-items-left gap-1 mt-4">
                                    <h2 class="mb-2">@trainers.Count()</h2>
                                    <span>Total Trainers</span>
                                </div>
                            </div>
                            <ul class="p-0 m-0">
                                <li class="d-flex mb-4 pb-1">

                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <h6 class="mb-0">Active</h6>
                                            <small class="text-muted">Currently Active Trainer</small>
                                        </div>
                                        <div class="user-progress">
                                            <small class="fw-semibold">@activeTrainers.Count() Trainers</small>
                                        </div>
                                    </div>
                                </li>
                                <li class="d-flex mb-4 pb-1">

                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <h6 class="mb-0">In Active</h6>
                                            <small class="text-muted">Trainers that are not Active Currently</small>
                                        </div>
                                        <div class="user-progress">
                                            <small class="fw-semibold">@inActiveTrainers.Count() Trainers</small>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                            <a asp-controller="Trainer" asp-action="AvailableTrainers" type="submit" class="btn btn-danger deactivate-account">Go to Details</a>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between pb-0">
                        <div class="card-title mb-0">
                            <h5 class="m-0 me-2">Equipment Statistics</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex flex-column align-items-left gap-1 mt-4">
                                <h2 class="mb-2">@equipments.Count()</h2>
                                <span>Total Equipments</span>
                            </div>
                        </div>

                        <a asp-controller="Equipment" asp-action="AvailableEquipments" type="submit" class="btn btn-danger deactivate-account">Go to Details</a>
                    </div>
                </div>
            </div>
            <!--/ Order Statistics -->
            <!-- Expense Overview -->
            <!--/ Transactions -->
        </div>

    </div>
    <!-- / Content -->
    <!-- Footer -->
    <footer class="content-footer footer bg-footer-theme">
        <div class="container-xxl d-flex flex-wrap justify-content-center text-center py-2  flex-column">
            <div class="mb-2 mb-md-0">
                © Copyright
                <script>
                    document.write(new Date().getFullYear());
                </script> Coderboy, All Rights Reserved
            </div>
        </div>
    </footer>
    <!-- / Footer -->

    <div class="content-backdrop fade"></div>
</div>
@section scripts{
    <script>
        const date = new Date().toJSON().slice(0, 10);;
        document.getElementById("date").textContent = `${date}`

        function time() {
            var d = new Date();
            var s = d.getSeconds();
            var m = d.getMinutes();
            var h = d.getHours();
            m = m < 10 ? "0" + m : m;
            document.getElementById("clock").textContent = `${h} : ${m} : ${s}`
        }
        time();
        setInterval(time, 1000);
    </script>
}