@model ChangePasswordViewModel;
@{
    ViewBag.Title = "Admin | Settings";
    ViewBag.SettingsActive = "active";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <form asp-controller="Account" asp-action="ChangePassword" method="POST">
        <div class="card mb-4">
            <h5 class="card-header">Change Password</h5>
            <!-- Account -->
            <hr class="my-0">
            <div class="card-body">
                <div class="text-red" asp-validation-summary="All"></div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="CurrentPassword" class="form-label"></label>
                        @Html.EditorFor(m => m.CurrentPassword, new { htmlattributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="NewPassword" class="form-label"></label>
                        @Html.EditorFor(m => m.NewPassword, new { htmlattributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="ConfirmNewPassword" class="form-label"></label>
                        @Html.EditorFor(m => m.ConfirmNewPassword, new { htmlattributes = new { @class = "form-control" } })
                    </div>

                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary me-2">Update Password</button>
                </div>

            </div>
            <!-- /Account -->
        </div>
    </form>

</div>