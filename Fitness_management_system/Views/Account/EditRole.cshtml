@model RoleViewModel
@{
    ViewBag.Title = "Admin | Manage Roles";
    ViewBag.ManageRolesActive = "active";
}
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Edit Role</h5>
                <small class="text-muted float-end">Default label</small>
            </div>
            <div class="card-body">

                <form asp-controller="Account" asp-action="EditRole" method="post">
                    <div asp-validation-summary="All" class="text-red"></div>
                    <div class="row mb-3">
                        <input asp-for="ID" hidden />
                        <label class="col-sm-2 col-form-label" asp-for="RoleName"></label>
                        <div class="col-sm-5">
                            <input asp-for="RoleName" class="form-control" id="basic-default-name"
                                placeholder="Enter Role name">
                        </div>
                        <div class="col-sm-2">
                            <button class="btn btn-danger" type="submit">Update Role</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>