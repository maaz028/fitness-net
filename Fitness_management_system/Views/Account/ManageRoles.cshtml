@model RoleViewModel
@{
    ViewBag.Title = "Admin | Manage Roles";
    ViewBag.ManageRolesActive = "active";
}
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Add Role</h5>
                <small class="text-muted float-end">Default label</small>
            </div>
            <div class="card-body">

                <form asp-controller="Account" asp-action="AddRole" method="post">
                    <div asp-validation-summary="All" class="text-red"></div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="RoleName"></label>
                        <div class="col-sm-5">
                            <input asp-for="RoleName" class="form-control" id="basic-default-name"
                                placeholder="Enter Role name">
                        </div>
                        <div class="col-sm-2">
                            <button class="btn btn-danger" type="submit">Add Role</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        @if (Model.Roles.Any())
        {
            <div class="row">
                @foreach (var role in Model.Roles)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <p class="card-title">@role.Id</p>
                                <h5 class="card-text">Role Name: @role.Name</h5>
                                <a asp-controller="Account" asp-action="EditRole" asp-route-roleId="@role.Id"
                                    class="btn btn-primary">Edit</a>
                                <a asp-controller="Account" asp-action="DeleteRole" asp-route-roleId="@role.Id"
                                    onclick="return confirm('Are you sure you want to delete ?')"
                                    class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">No Roles available at the moment</h5>
                    <small class="text-muted float-end">No Roles</small>
                </div>

            </div>
        }

    </div>
</div>