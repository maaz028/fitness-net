@model TrainerModel
@{
    ViewBag.Title = "Admin | Available Trainers";
    ViewBag.TrainerDetailsActive = "active open";
    ViewBag.AvailableTrainersActive = "active";


}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Trainer Details</h5>
            <small class="text-muted float-end">Default label</small>
        </div>
        <div class="card-body">
            <div class="row g-0">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <img class="card-img card-img-left" src="~/images/trainers/@Model.PhotoPath" alt="Card image">
                    }
                    else
                    {
                        <img class="card-img card-img-left" src="~/assets/img/avatars/5.png" alt="Card image">
                    }

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">
                            <b>Email:</b>&nbsp; @Model.Email <br /> <br />
                            <b>Gender:</b>&nbsp; @Model.Gender <br /> <br />
                            <b>Account Status:</b>&nbsp;
                            @if (Model.AvailabilityStatus == AvailabilityStatusEnum.Active)
                            {
                                <span class="badge bg-label-success me-1">@Model.AvailabilityStatus</span>
                            }
                            else
                            {
                                <span class="badge bg-label-danger me-1">@Model.AvailabilityStatus</span>
                            } <br /> <br />
                            <b>Apply Date:</b>&nbsp; @Model.CreatedDate <br /> <br />
                            <b>Joining Date:</b>&nbsp; @Model.JoiningDate <br /> <br />
                        </p>
                    </div>
                </div>
            </div>

            <a asp-action="AvailableTrainers" style="margin:10px 5px;" asp-controller="Trainer" type="submit" class="m-4 btn btn-primary">Back</a>
            <a asp-action="EditTrainerDetails" style="margin:10px 5px;" asp-controller="Trainer" asp-route-id="@Model.TrainerID" type="submit" class="m-4 btn btn-danger">Edit</a>
        </div>
    </div>






</div>